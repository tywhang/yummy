<a href="/admin" class="btn btn-primary">Back to Admin Dashboard</a>
<h2>Edit Item</h2>
<form action="/items/<%= @item.id %>" method="post">
  <input name="_method" type="hidden" value="patch" />
  <input name="id" type="hidden" value="<%= @item.id %>">
  <div class="form-group">
    <label class="col-sm-4">Name: </label>
    <div class="col-sm-8">
      <input class="form-control" type="text" name="item[name]" value="<%= @item.name %>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4">Description: </label>
    <div class="col-sm-8">
      <input class="form-control" type="text" name="item[description]" value="<%= @item.description %>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4" for="item[price]">Price</label>
    <div class="col-sm-8">
      <input type="decimal" class="form-control" name="item[price]" value="<%= @item.price %>">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4" for="item[section_id]">Section</label>
    <div class="col-sm-8">
      <select class="form-control" name="item[section_id]">
        <% @sections.each do |section| %>
          <% if section.id == @item.section.id %>
            <option selected="selected" value="<%= section.id %>"><%= section.name %></option>
          <% else %>
            <option value="<%= section.id %>"><%= section.name %></option>
          <% end %>
        <% end %>
      </select>
    </div>
  </div>
  <input type="hidden" name="<%= request_forgery_protection_token.to_s %>" value="<%= form_authenticity_token %>">
  <input class="btn btn-primary pull-right" type="submit" value="Update item">
</form>
<div class="row">
  <a href="/items/<%= @item.id %>" data-method="delete" class="btn btn-danger pull-right" type="submit">Destroy item</a>
</div>